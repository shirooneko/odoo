<odoo>
    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">library.loan.form</field>
        <field name="model">library.book.loan</field>
        <field name="arch" type="xml">
            <form string="Loan">
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="member_id"/>
                        <field name="date_borrowed"/>
                        <field name="date_return"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_loan_tree" model="ir.ui.view">
        <field name="name">library.loan.tree</field>
        <field name="model">library.book.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan">
                <field name="book_id"/>
                <field name="member_id"/>
                <field name="date_borrowed"/>
                <field name="date_return"/>
            </tree>
        </field>
    </record>
</odoo>